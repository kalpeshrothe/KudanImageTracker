<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eu.kudan.kudansamples.ARCameraActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="82dp"
            android:layout_height="62dp"
            android:text="View Image"
            android:onClick="addImageButtonPressed"
            android:id="@+id/ImageButton"
            android:layout_gravity="bottom" />

        <Button
            android:layout_width="82dp"
            android:layout_height="62dp"
            android:text="View Video"
            android:onClick="addVideoButtonPressed"
            android:id="@+id/VideoButton"
            android:layout_gravity="bottom" />

        <Button
            android:layout_width="82dp"
            android:layout_height="62dp"
            android:text="View Alpha Video"
            android:onClick="addAlphaButtonPressed"
            android:id="@+id/AlphaButton" />

        <Button
            android:layout_width="82dp"
            android:layout_height="62dp"
            android:text="View Model"
            android:onClick="addModelButtonPressed"
            android:id="@+id/ModelButton"
            android:layout_gravity="bottom" />
    </LinearLayout>
</RelativeLayout>
